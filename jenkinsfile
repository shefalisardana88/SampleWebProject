pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                echo "Compiling the Code.........."
                bat "mvn compile"
            }
        }
        stage('Testing') {
            steps {
                echo "Testing the Code.........."
                bat "mvn test"
            }
        }
        stage('Packaging') {
            steps {
                echo "Packaging the Code.........."
                bat "mvn package" 
            }
        }
       stage('Install') {
            steps {
                echo "Installing the Code.........."
                bat "mvn install" 
            }
        }
        
        stage('Deploy')
        {
        steps{
        
        echo "Deploying the code"
        deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://localhost:80')], contextPath: 'SampleWebApp.war', war: '**/*.war'
        }
        
        }
    }
}
